    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@jsverse/transloco": "^7.5.1",
    "@milkdown/crepe": "^7.6.2",
    "@milkdown/theme-nord": "^7.6.2",
    "@uiw/codemirror-theme-xcode": "^4.23.7",
    "conditio": "^2.3.4",
    "ng-prosemirror-adapter": "^0.0.9",
    "prism-themes": "^1.9.0",
