{
  "name": "ng-milkdown",
  "version": "0.1.0-beta.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 2025",
    "build": "ng build --configuration production --base-href /ng-milkdown/",
    "watch": "ng build --watch --configuration development",
    "build:lib": "ng build ng-milkdown --configuration production",
    "test": "ng test",
    "publish": "npm run build:lib && cd dist/ng-milkdown && npm publish",
    "publish:beta": "npm run build:lib && cd dist/ng-milkdown && npm publish --tag beta",
    "postinstall": "node fix-emojilib.js"
  },
  "private": true,
